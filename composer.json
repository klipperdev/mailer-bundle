{
    "name": "klipper/mailer-bundle",
    "type": "symfony-bundle",
    "description": "Mailer bundle of Klipper",
    "keywords": ["email", "template", "html", "mail", "manager", "doctrine", "twig", "bundle"],
    "homepage": "https://github.com/klipperdev/mailer-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Fran√ßois Pluchino",
            "email": "francois.pluchino@klipper.dev"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4.0|^8.0.0",
        "symfony/framework-bundle": "^5.2.0",
        "klipper/mailer": "^2.0.0"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "^2.0.0",
