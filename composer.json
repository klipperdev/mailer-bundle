        "klipper/sms-sender-bundle": "^2.0.0",
        "klipper/twig-sms-sender": "^2.0.0",
        "symfony/mailer": "^5.2.0",
        "symfony/twig-bundle": "^5.2.0"
    },
    "autoload": {
        "psr-4": { "Klipper\\Bundle\\MailerBundle\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
